<!-- views/partials/messages.hbs -->

{{#if auto_success}}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        Toastify({
            text: "{{auto_success}}",
            duration: 3000,
            close: true,
            gravity: "top", // `top` o `bottom`
            position: "right", // `left`, `center` o `right`
            stopOnFocus: true, // Evita que se cierre si el usuario tiene el cursor sobre el toast
            style: {
                background: "linear-gradient(to right, #00b09b, #96c93d)",
            },
        }).showToast();
    });
</script>
{{/if}}

{{#if auto_error}}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        Toastify({
            text: "{{auto_error}}",
            duration: 5000, // Los errores duran un poco m√°s
            close: true,
            gravity: "top",
            position: "right",
            style: {
                background: "linear-gradient(to right, #ff5f6d, #ffc371)",
            },
        }).showToast();
    });
</script>
{{/if}}