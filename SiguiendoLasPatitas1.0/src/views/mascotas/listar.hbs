<div class="container p-1">
    <div class="container text-center">
        <h2 class="titulos">Mis mascotas</h2>
        <h6 class="subtitulos">Aquí podrás ver todas tus mascotas registradas.</h6>
    </div>
    <a href="/mascotas/agregar" class="btn mb-3 btnAgregar">AGREGAR <i
            class="fa-solid fa-plus fa-sm colorPrincipal" ></i></a>
    <div class="row">
        {{#each mascotas}}
        <div class="col-md-4">
            <div class="card text-center position-relative">
                <div class="position-absolute top-0 end-0 m-2 d-flex gap-1">
                    <a href="/mascotas/editar/{{ID_MASCOTAS}}" class="text-success" title="Editar">
                        <i class="fa-solid fa-pen colorPrincipal" ></i>
                    </a>
                    <a href="/mascotas/eliminar/{{ID_MASCOTAS}}" class="text-danger" title="Eliminar" onclick="return confirm('¿Estás seguro de eliminar?')">
                        <i class="fa-solid fa-xmark fa-xl colorPrincipal" ></i>
                    </a>
                </div>
                <div class="card-body">
                    <h3 class="card-title text-uppercase subtitulosMenu mt-3">
                        {{MASCOTAS_NOMBRE}}
                    </h3>
                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        {{TIPO_NOMBRE}} - {{RAZA_NOMBRE}} - {{SEXO_NOMBRE}}
                    </h6>
                    <p class="card-text">
                        Fecha de Nacimiento: {{MASCOTAS_FNAC}}
                    </p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay mascotas agregadas.</p>
                <a href="/mascotas/agregar">Agrega una.</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>