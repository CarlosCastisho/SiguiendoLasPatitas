<div class="container p-4">
    <div class="row">

        {{#each mascotas}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase colorGreen">
                            {{MASCOTAS_NOMBRE}}
                        </h3>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            {{TIPO_NOMBRE}} - {{RAZA_NOMBRE}} - {{SEXO_NOMBRE}}
                        </h6>
                        <p class="card-text">
                            Fecha de Nacimiento: {{MASCOTAS_FNAC}}
                        </p>
                        <a href="/mascotas/eliminar/{{ID_MASCOTAS}}" class="btn btn-danger">Eliminar</a>
                        <a href="/mascotas/editar/{{ID_MASCOTAS}}" class="btn btn-success">Editar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay mascotas agregadas.</p>
                    <a href="/mascotas/agregar">Agrega una.</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>
