<div class="d-flex justify-content-end align-items-center vh-100 login-container">
    <div>
        <img src="/img/fondoLogin.png" alt="perrito" class="img-fluid fondoLogin ">
    </div>
    <div class="col-md-5 col-lg-4">

        <div class="tarjeta-proyecto login-card-moderno">

            <div class="card-header text-center">
                <h2 class="fw-bold fs-2">Iniciar sesión</h2>
            </div>
            <div class="card-body">
                <form action="/acceso" method="post">
                    <div class="form-group my-3">
                        <input type="email" id="user_correo" name="user_correo" placeholder="Correo electrónico"
                               class="form-control" value="{{user_correo}}" required>
                    </div>
                    <div class="form-group my-4">
                        <input type="password" id="user_contrasenia" name="user_contrasenia" placeholder="Contraseña"
                               class="form-control" required>
                    </div>
                    <div class="form-group text-center d-grid gap-2">
                        <button class="btn btn-primary btn-block fw-bold">Ingresar</button>
                    </div>
                    <div class="footer">
                        <p class="text-muted text-center mt-3">¿Sos nuevo? <a href="/registro" class="text-decoration-none">Registrate</a></p>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
