<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/adoptantes/asignar" method="POST">
                        <h3 class="card-title text-center subtitulosMenu">Asignar</h3>
                        <div class="form-group my-3">
                            <label for="mascota" class="form-label subtitulosMenu letraBold">Mascota:</label>
                            <select id="mascota" class="form-control" name="id_mascota" required>
                                <option value="" disabled selected>Nombre - Tipo - Raza</option>
                                {{#each mascotas}}
                                <option value="{{ID_MASCOTAS}}">{{MASCOTAS_NOMBRE}} - {{TIPO_NOMBRE}} - {{RAZA_NOMBRE}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group my-3">
                            {{#each adoptantes}}
                                <label for="adoptante" class="form-label subtitulosMenu letraBold">Nombre de Adoptante:</label>
                                <input type="hidden" value="{{ID_ADOPTS}}" id="adoptante" name="id_adopts" class="form-control" required>
                                <input type="text" value="{{ADOPTS_NOMBRE}}" class="form-control" disabled>
                                <label class="form-label subtitulosMenu letraBold">Direccion:</label>
                                <textarea class="form-control" aria-label="With textarea" style="height: 130px" disabled>{{ADOPTS_DIRECCION}}</textarea>
                            {{/each}}
                        </div>
                        
                        <div class="form-group d-grid my-3">
                            <button class="btn btn-success">Aceptar</button>
                            <a href="/adoptantes/adoptar" class="btn btn-danger my-2">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>