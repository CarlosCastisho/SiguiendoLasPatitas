<div class="d-flex justify-content-center align-items-center py-5">
    
    <div class="col-md-6 col-lg-5">

        <div class="h-auto login-card-moderno">

            <div class="card-header text-center">
                <h3 class="letraBold">Crea una cuenta</h3>
            </div>

            <div class="card-body">
                <form id="form-registro" action="/registro" method="post" class="needs-validation" novalidate>

                    <div class="form-group my-3">
                        <input type="text" id="user_nombre" name="user_nombre" placeholder="Nombre" class="form-control"
                                pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]{2,}" required>
                        <div class="invalid-feedback">
                            Solo letras, al menos 2 caracteres.
                        </div>
                    </div>

                    <div class="form-group my-3">
                        <input type="text" id="user_apellido" name="user_apellido" placeholder="Apellido"
                                class="form-control" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]{2,}" required>
                        <div class="invalid-feedback">
                            Solo letras, al menos 2 caracteres.
                        </div>
                    </div>

                    <div class="form-group my-3">
                        <input type="email" id="user_correo" name="user_correo" placeholder="Correo electrónico"
                                class="form-control" required>
                        <div class="invalid-feedback">
                            Por favor, ingresa un correo válido.
                        </div>
                    </div>

                    <div class="form-group my-3">
                        <input type="tel" id="user_telefono" name="user_telefono" placeholder="Número de celular"
                                class="form-control" pattern="[0-9]{10,}" required>
                        <div class="invalid-feedback">
                            Debe contener al menos 10 números.
                        </div>
                    </div>

                    <div class="form-group my-3 position-relative">
                        <input type="password" id="user_contrasenia" name="user_contrasenia" placeholder="Contraseña"
                                class="form-control" pattern="^(?=.*[A-Z])(?=.*\d)[A-Za-z\d@$!%*?&]{8,}$" required>
                        <span class="password-icon" onclick="togglePassword('user_contrasenia', this)">
                            <i class="fas fa-eye"></i>
                        </span>
                        <div class="invalid-feedback">
                            Mínimo 8 caracteres, una mayúscula y un número.
                        </div>
                    </div>

                    <div class="form-group my-3 position-relative">
                        <input type="password" id="confirmar_contrasenia" name="confirmar_contrasenia" placeholder="Repite tu contraseña"
                                class="form-control" required>
                        <span class="password-icon" onclick="togglePassword('confirmar_contrasenia', this)">
                            <i class="fas fa-eye"></i>
                        </span>
                        <div class="invalid-feedback">
                            Las contraseñas no coinciden o el campo está vacío.
                        </div>
                    </div>
                    
                    <div class="form-group text-center d-grid gap-2 mt-4">
                        <button class="btn btn-primary btn-block fw-bold">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword(inputId, iconElement) {
        const input = document.getElementById(inputId);
        const icon = iconElement.querySelector('i');
        const isHidden = input.type === 'password';

        input.type = isHidden ? 'text' : 'password';
        icon.classList.toggle('fa-eye');
        icon.classList.toggle('fa-eye-slash');
    }


    document.getElementById('form-registro').addEventListener('submit', function (e) {
        const form = this;
        const pass = document.getElementById('user_contrasenia');
        const confirm = document.getElementById('confirmar_contrasenia');

        // Esto le dice al navegador si las contraseñas coinciden o no.
        if (pass.value !== confirm.value) {
            // Si no coinciden, le ponemos un mensaje de error personalizado.
            // Esto hará que form.checkValidity() falle automáticamente.
            confirm.setCustomValidity('Las contraseñas no coinciden.');
        } else {
            // Si coinciden, es MUY IMPORTANTE limpiar el mensaje de error.
            confirm.setCustomValidity('');
        }


        // Tu lógica de validación ahora funciona aún mejor
        if (!form.checkValidity()) {
            e.preventDefault(); // Previene el envío solo si algo es inválido
            e.stopPropagation();
        }

        form.classList.add('was-validated'); // Esta es la clase estándar de Bootstrap para mostrar los mensajes
    });
</script>